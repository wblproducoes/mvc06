{
    "name": "sistema/administrativo-mvc",
    "description": "Sistema administrativo completo em PHP com arquitetura MVC",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "twig/twig": "^3.0",
        "phpmailer/phpmailer": "^6.9",
        "dompdf/dompdf": "^3.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Cli\\": "cli/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    }
}