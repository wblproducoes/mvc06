# Configurações do Banco de Dados
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sistema_admin
DB_USERNAME=root
DB_PASSWORD=
DB_PREFIX=sa_

# Configurações da Aplicação
APP_NAME="Sistema Administrativo"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Configurações de Email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="Sistema Admin"

# Configurações de Sessão
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# Chave de Criptografia (gere uma nova)
APP_KEY=base64:exemplo_chave_32_caracteres_aqui

# Configurações de Segurança
SECURITY_LEVEL=high
IP_WHITELIST=
ENABLE_2FA=false
FORCE_HTTPS=true
SECURITY_HEADERS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ========================================
# CONFIGURAÇÕES DA API REST
# ========================================

# JWT Authentication
JWT_SECRET=sua_chave_secreta_jwt_muito_segura_aqui_256_bits
JWT_EXPIRY=3600
JWT_REFRESH_EXPIRY=604800

# CORS Configuration
API_CORS_ENABLED=true
API_CORS_ORIGINS=*
API_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
API_CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# API Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=3600

# API Documentation
API_DOCS_ENABLED=true
API_VERSION=v1