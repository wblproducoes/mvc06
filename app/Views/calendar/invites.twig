{% extends "layouts/base.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block head %}
<style>
    .invite-card {
        border-left: 4px solid;
        transition: all 0.2s ease;
    }
    
    .invite-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .event-time {
        font-size: 0.9rem;
        color: var(--bs-secondary-color);
    }
    
    .invite-actions {
        display: flex;
        gap: 0.5rem;
    }
    
    .btn-respond {
        min-width: 80px;
    }
    
    @media (max-width: 576px) {
        .invite-actions {
            flex-direction: column;
        }
        
        .btn-respond {
            width: 100%;
        }
    }
</style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">{{ title }}</h1>
            <p class="text-muted mb-0">Gerencie seus convites para eventos</p>
        </div>
        <a href="/calendario" class="btn btn-outline-primary">
            <i class="fas fa-calendar"></i> Voltar ao Calendário
        </a>
    </div>
    
    {% if invites %}
        <div class="row">
            {% for invite in invites %}
            <div class="col-lg-6 col-xl-4 mb-4">
                <div class="card invite-card h-100" 
                     style="border-left-color: {{ invite.color ?? '#007bff' }}">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">{{ invite.title }}</h5>
                            <span class="badge bg-warning">
                                <i class="fas fa-clock"></i> Pendente
                            </span>
                        </div>
                        
                        {% if invite.description %}
                        <p class="card-text">{{ invite.description|slice(0, 100) }}{% if invite.description|length > 100 %}...{% endif %}</p>
                        {% endif %}
                        
                        <div class="mb-3">
                            <div class="event-time">
                                <i class="fas fa-calendar"></i>
                                <strong>Início:</strong> {{ invite.start_date|date('d/m/Y H:i') }}
                            </div>
                            <div class="event-time">
                                <i class="fas fa-calendar-check"></i>
                                <strong>Fim:</strong> {{ invite.end_date|date('d/m/Y H:i') }}
                            </div>
                        </div>
                        
                        {% if invite.location %}
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-map-marker-alt"></i>
                                {{ invite.location }}
                            </small>
                        </div>
                        {% endif %}
                        
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-user"></i>
                                Criado por: <strong>{{ invite.creator_name }}</strong>
                            </small>
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-envelope"></i>
                                Convidado em: {{ invite.invited_at|date('d/m/Y H:i') }}
                            </small>
                        </div>
                    </div>
                    
                    <div class="card-footer bg-transparent">
                        <div class="invite-actions">
                            <button class="btn btn-success btn-respond" 
                                    onclick="respondInvite({{ invite.event_id }}, 'accepted', this)">
                                <i class="fas fa-check"></i> Aceitar
                            </button>
                            <button class="btn btn-danger btn-respond" 
                                    onclick="respondInvite({{ invite.event_id }}, 'declined', this)">
                                <i class="fas fa-times"></i> Recusar
                            </button>
                            <button class="btn btn-outline-info btn-respond" 
                                    onclick="viewEventDetails({{ invite.event_id }})">
                                <i class="fas fa-eye"></i> Detalhes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        
        <!-- Estatísticas -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-chart-pie"></i> Resumo
                        </h6>
                        <div class="row text-center">
                            <div class="col-md-4">
                                <div class="h4 text-warning mb-0">{{ invites|length }}</div>
                                <small class="text-muted">Convites Pendentes</small>
                            </div>
                            <div class="col-md-4">
                                <div class="h4 text-info mb-0">
                                    {{ invites|filter(i => i.start_date|date('Y-m-d') == 'today'|date('Y-m-d'))|length }}
                                </div>
                                <small class="text-muted">Para Hoje</small>
                            </div>
                            <div class="col-md-4">
                                <div class="h4 text-primary mb-0">
                                    {{ invites|filter(i => i.start_date|date('Y-m-d') > 'now'|date('Y-m-d'))|length }}
                                </div>
                                <small class="text-muted">Futuros</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    {% else %}
        <!-- Estado Vazio -->
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-envelope-open-text fa-4x text-muted"></i>
            </div>
            <h4 class="text-muted">Nenhum convite pendente</h4>
            <p class="text-muted mb-4">
                Você não possui convites pendentes no momento.<br>
                Quando alguém convidar você para um evento, aparecerá aqui.
            </p>
            <a href="/calendario" class="btn btn-primary">
                <i class="fas fa-calendar"></i> Ir para o Calendário
            </a>
        </div>
    {% endif %}
</div>

<!-- Modal Detalhes do Evento -->
<div class="modal fade" id="eventDetailsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eventDetailsTitle">Detalhes do Evento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="eventDetailsBody">
                <!-- Conteúdo carregado via JavaScript -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <div id="eventDetailsActions">
                    <!-- Botões de ação carregados via JavaScript -->
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
function respondInvite(eventId, status, button) {
    // Desabilita botão durante requisição
    const originalText = button.innerHTML;
    button.disabled = true;
    button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processando...';
    
    fetch(`/calendario/convite/${eventId}/responder`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify({ status: status })
    })
    .then(response => response.json())
    .then(result => {
        if (result.success) {
            showAlert(result.message, 'success');
            
            // Remove o card do convite da tela
            const card = button.closest('.col-lg-6, .col-xl-4');
            if (card) {
                card.style.transition = 'all 0.3s ease';
                card.style.opacity = '0';
                card.style.transform = 'scale(0.8)';
                
                setTimeout(() => {
                    card.remove();
                    
                    // Verifica se não há mais convites
                    const remainingCards = document.querySelectorAll('.invite-card').length;
                    if (remainingCards === 0) {
                        location.reload(); // Recarrega para mostrar estado vazio
                    }
                }, 300);
            }
        } else {
            showAlert(result.error, 'danger');
            button.disabled = false;
            button.innerHTML = originalText;
        }
    })
    .catch(error => {
        console.error('Erro:', error);
        showAlert('Erro ao responder convite', 'danger');
        button.disabled = false;
        button.innerHTML = originalText;
    });
}

function viewEventDetails(eventId) {
    fetch(`/calendario/evento/${eventId}`)
    .then(response => response.json())
    .then(result => {
        if (result.success) {
            showEventDetailsModal(result.event, result.participants);
        } else {
            showAlert(result.error, 'danger');
        }
    })
    .catch(error => {
        console.error('Erro:', error);
        showAlert('Erro ao carregar detalhes do evento', 'danger');
    });
}

function showEventDetailsModal(event, participants) {
    document.getElementById('eventDetailsTitle').textContent = event.title;
    
    let html = `
        <div class="mb-3">
            <strong>Descrição:</strong><br>
            ${event.description || 'Sem descrição'}
        </div>
        
        <div class="row mb-3">
            <div class="col-md-6">
                <strong>Início:</strong><br>
                ${formatDateTime(event.start_date, event.all_day)}
            </div>
            <div class="col-md-6">
                <strong>Fim:</strong><br>
                ${formatDateTime(event.end_date, event.all_day)}
            </div>
        </div>
    `;
    
    if (event.location) {
        html += `
            <div class="mb-3">
                <strong>Local:</strong><br>
                <i class="fas fa-map-marker-alt"></i> ${event.location}
            </div>
        `;
    }
    
    if (participants.length > 0) {
        html += `
            <div class="mb-3">
                <strong>Outros Participantes:</strong><br>
        `;
        
        participants.forEach(p => {
            const statusIcon = getStatusIcon(p.status);
            const statusColor = getStatusColor(p.status);
            html += `<span class="badge bg-${statusColor} me-1">${statusIcon} ${p.user_name}</span>`;
        });
        
        html += '</div>';
    }
    
    document.getElementById('eventDetailsBody').innerHTML = html;
    
    // Adiciona botões de ação
    document.getElementById('eventDetailsActions').innerHTML = `
        <button class="btn btn-success" onclick="respondInviteFromModal(${event.id}, 'accepted')">
            <i class="fas fa-check"></i> Aceitar
        </button>
        <button class="btn btn-danger" onclick="respondInviteFromModal(${event.id}, 'declined')">
            <i class="fas fa-times"></i> Recusar
        </button>
    `;
    
    const modal = new bootstrap.Modal(document.getElementById('eventDetailsModal'));
    modal.show();
}

function respondInviteFromModal(eventId, status) {
    respondInvite(eventId, status, document.querySelector(`button[onclick*="${eventId}"][onclick*="${status}"]`));
    document.getElementById('eventDetailsModal').querySelector('.btn-close').click();
}

function formatDateTime(dateStr, allDay) {
    const date = new Date(dateStr);
    if (allDay) {
        return date.toLocaleDateString('pt-BR');
    } else {
        return date.toLocaleString('pt-BR');
    }
}

function getStatusIcon(status) {
    const icons = {
        'pending': '⏳',
        'accepted': '✅',
        'declined': '❌'
    };
    return icons[status] || '❓';
}

function getStatusColor(status) {
    const colors = {
        'pending': 'warning',
        'accepted': 'success',
        'declined': 'danger'
    };
    return colors[status] || 'secondary';
}

function showAlert(message, type) {
    // Remove alertas existentes
    document.querySelectorAll('.alert-floating').forEach(el => el.remove());
    
    // Cria novo alerta
    const alert = document.createElement('div');
    alert.className = `alert alert-${type} alert-dismissible fade show alert-floating`;
    alert.style.cssText = 'position: fixed; top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
    alert.innerHTML = `
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;
    
    document.body.appendChild(alert);
    
    // Remove automaticamente após 5 segundos
    setTimeout(() => {
        if (alert.parentNode) {
            alert.remove();
        }
    }, 5000);
}

// Auto-refresh da página a cada 5 minutos para mostrar novos convites
setInterval(() => {
    // Só recarrega se não há modais abertos
    if (!document.querySelector('.modal.show')) {
        location.reload();
    }
}, 300000); // 5 minutos
</script>
{% endblock %}