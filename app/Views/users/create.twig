{% extends 'layouts/base.twig' %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-person-plus"></i>
        Novo Usuário
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/usuarios" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i>
            Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form method="POST" action="/usuarios/criar">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                    
                    <!-- Dados Básicos -->
                    <h5 class="card-title mb-3">
                        <i class="bi bi-person"></i>
                        Dados Básicos
                    </h5>
                    
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label for="name" class="form-label">Nome Completo *</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="col-md-4">
                            <label for="alias" class="form-label">Apelido</label>
                            <input type="text" class="form-control" id="alias" name="alias">
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="email" class="form-label">Email *</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="col-md-6">
                            <label for="username" class="form-label">Username *</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="cpf" class="form-label">CPF</label>
                            <input type="text" class="form-control" id="cpf" name="cpf" 
                                   placeholder="000.000.000-00" data-mask="000.000.000-00">
                        </div>
                        <div class="col-md-6">
                            <label for="birth_date" class="form-label">Data de Nascimento</label>
                            <input type="date" class="form-control" id="birth_date" name="birth_date">
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <label for="gender_id" class="form-label">Gênero</label>
                            <select class="form-select" id="gender_id" name="gender_id">
                                <option value="">Selecione...</option>
                                {% for gender in genders %}
                                <option value="{{ gender.id }}">{{ gender.translate }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="level_id" class="form-label">Nível de Acesso *</label>
                            <select class="form-select" id="level_id" name="level_id" required>
                                {% for level in levels %}
                                <option value="{{ level.id }}" {{ level.id == 11 ? 'selected' : '' }}>
                                    {{ level.translate }}
                                </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="status_id" class="form-label">Status *</label>
                            <select class="form-select" id="status_id" name="status_id" required>
                                {% for status in statuses %}
                                <option value="{{ status.id }}" {{ status.id == 1 ? 'selected' : '' }}>
                                    {{ status.translate }}
                                </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    
                    <!-- Contatos -->
                    <h5 class="card-title mb-3">
                        <i class="bi bi-telephone"></i>
                        Contatos
                    </h5>
                    
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <label for="phone_home" class="form-label">Telefone Residencial</label>
                            <input type="text" class="form-control" id="phone_home" name="phone_home" 
                                   placeholder="(00) 0000-0000" data-mask="(00) 0000-0000">
                        </div>
                        <div class="col-md-4">
                            <label for="phone_mobile" class="form-label">Celular</label>
                            <input type="text" class="form-control" id="phone_mobile" name="phone_mobile" 
                                   placeholder="(00) 00000-0000" data-mask="(00) 00000-0000">
                        </div>
                        <div class="col-md-4">
                            <label for="phone_message" class="form-label">WhatsApp</label>
                            <input type="text" class="form-control" id="phone_message" name="phone_message" 
                                   placeholder="(00) 00000-0000" data-mask="(00) 00000-0000">
                        </div>
                    </div>
                    
                    <!-- Acesso -->
                    <h5 class="card-title mb-3">
                        <i class="bi bi-key"></i>
                        Dados de Acesso
                    </h5>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label for="password" class="form-label">Senha *</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                            <div class="form-text">Mínimo 8 caracteres</div>
                        </div>
                        <div class="col-md-6">
                            <label for="password_confirm" class="form-label">Confirmar Senha *</label>
                            <input type="password" class="form-control" id="password_confirm" name="password_confirm" required>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/usuarios" class="btn btn-outline-secondary me-md-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check"></i>
                            Criar Usuário
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle"></i>
                    Informações
                </h6>
            </div>
            <div class="card-body">
                <h6>Níveis de Acesso:</h6>
                <ul class="list-unstyled small">
                    <li><strong>Master:</strong> Acesso total</li>
                    <li><strong>Admin:</strong> Administrador</li>
                    <li><strong>Professor:</strong> Área pedagógica</li>
                    <li><strong>Aluno:</strong> Área do estudante</li>
                    <li><strong>Usuário:</strong> Acesso básico</li>
                </ul>
                
                <hr>
                
                <h6>Dicas:</h6>
                <ul class="list-unstyled small">
                    <li>• Campos com * são obrigatórios</li>
                    <li>• O username deve ser único</li>
                    <li>• A senha deve ter pelo menos 8 caracteres</li>
                    <li>• O CPF será validado automaticamente</li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Validação de senha
    const password = document.getElementById('password');
    const passwordConfirm = document.getElementById('password_confirm');
    
    function validatePasswords() {
        if (password.value !== passwordConfirm.value) {
            passwordConfirm.setCustomValidity('As senhas não coincidem');
        } else {
            passwordConfirm.setCustomValidity('');
        }
    }
    
    password.addEventListener('input', validatePasswords);
    passwordConfirm.addEventListener('input', validatePasswords);
    
    // Máscaras de input
    const masks = {
        'data-mask': function(selector, mask) {
            document.querySelectorAll(`[data-mask="${mask}"]`).forEach(input => {
                input.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    let maskedValue = '';
                    let maskIndex = 0;
                    
                    for (let i = 0; i < mask.length && maskIndex < value.length; i++) {
                        if (mask[i] === '0') {
                            maskedValue += value[maskIndex];
                            maskIndex++;
                        } else {
                            maskedValue += mask[i];
                        }
                    }
                    
                    e.target.value = maskedValue;
                });
            });
        }
    };
    
    // Aplica máscaras
    masks['data-mask']('', '000.000.000-00');
    masks['data-mask']('', '(00) 0000-0000');
    masks['data-mask']('', '(00) 00000-0000');
});
</script>
{% endblock %}